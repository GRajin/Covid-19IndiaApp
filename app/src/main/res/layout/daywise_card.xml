<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDay"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                app:fontFamily="@font/product_regular"
                app:layout_constraintBottom_toTopOf="@id/guideline0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/day"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/product_regular"
                app:layout_constraintBottom_toTopOf="@id/guideline4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/guideline0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtConDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/confirmed"
                android:textColor="@color/colorBlue"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/guideline4" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtConDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/txtConDayText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRecDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recovered"
                android:textColor="@color/colorGreen"
                android:textSize="12sp"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/guideline5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRecDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"
                android:textSize="15sp"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/txtRecDayText" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDeadDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/deceased"
                android:textColor="@color/colorYellow"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/guideline1"
                app:layout_constraintRight_toLeftOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/guideline5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDeadDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorYellow"
                android:textSize="15sp"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toRightOf="@id/guideline1"
                app:layout_constraintRight_toLeftOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/txtDeadDayText" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/total"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/product_regular"
                app:layout_constraintBottom_toTopOf="@id/guideline4"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline0" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/guideline0"
                app:layout_constraintBottom_toTopOf="@id/guideline6"
                app:layout_constraintLeft_toLeftOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="@id/guideline2"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtConTotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmed"
                android:textColor="@color/colorBlue"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@+id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline4" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtConTot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtConTotText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRecTotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recovered"
                android:textColor="@color/colorGreen"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toLeftOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@id/guideline5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRecTot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGreen"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toLeftOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/txtRecTotText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDeadTotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/deceased"
                android:textColor="@color/colorYellow"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDeadTot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorYellow"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/product_regular"
                app:layout_constraintLeft_toRightOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDeadTotText" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/guideline4"
                app:layout_constraintBottom_toBottomOf="@id/guideline4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/guideline4"
                app:layout_constraintBottom_toBottomOf="@id/guideline4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDay"/>
</androidx.constraintlayout.widget.ConstraintLayout>